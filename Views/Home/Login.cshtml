@model PartyInvites.Models.UserInfo
@{
    Layout = null;
}


<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
    <title>Login</title>
</head>
<body>

    <h5 class="bg-primary text-white text-center m-2 p-2">Login</h5>
    <form asp-action="Login" method="post" class="m-2">
        <div asp-validation-summary="All"></div>
        <div class="form-group">
            <label asp-for="Email">Your email:</label>
            <input asp-for="Email" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Password">Your password:</label>
            <input asp-for="Password" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Login</button>
        <a asp-action="SignUp">Don't have an account? SignUp here!</a>
    </form>
</body>
</html>
