@model PartyInvites.Models.UserSignUp

@{
    Layout = null;
}


<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
    <title>SignUp!</title>
</head>
<body>

    <h5 class="bg-primary text-white text-center m-2 p-2">Sign Up!</h5>
    <form asp-action="SignUp" method="post" class="m-2">
        <div asp-validation-summary="All"></div>
        <div class="form-group">
            <label asp-for="FirstName">Your first name:</label>
            <input asp-for="FirstName" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="LastName">Your last name:</label>
            <input asp-for="LastName" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Email">Your email:</label>
            <input asp-for="Email" class="form-control" />
            @if (ViewBag.UserAlreadyExists == 1)
            {
                <div>A user with this email address already exists! do IsLayoutBeingRendered want to <a asp-action="Login">login</a>?</div>
            }
        </div>
        <div class="form-group">
            <label asp-for="Phone">Your phone:</label>
            <input asp-for="Phone" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Password">Your password:</label>
            <input asp-for="Password" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword">Confirm password:</label>
            <input asp-for="ConfirmPassword" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Sign Up!</button>
    </form>
    <br />
    <div style="margin-left:5px" class="form-group">
        <a asp-action="Login">login</a>
    </div>
</body>
</html>
